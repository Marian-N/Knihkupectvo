<AnchorPane prefHeight="800.0" prefWidth="1500.0" stylesheets="@admin-style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.adminmain.AdminMainController">
    <children>
        <JFXTabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <tabs>
                <Tab text="Books">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <JFXTextField fx:id="searchBookText" focusColor="darkorange" layoutX="12.0" layoutY="62.0" prefHeight="40.0" prefWidth="219.0" promptText="Search" />
                                <JFXButton fx:id="searchBookButton" onAction="#handleSearchBook" layoutX="75.0" layoutY="128.0" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Search" />
                                <GridPane layoutX="250.0" prefHeight="713.0" prefWidth="1245.0" translateX="1.0" translateY="1.0" translateZ="1.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <TableView fx:id="bookOverviewTable" onMouseClicked="#handleBookSelected" prefHeight="713.0" prefWidth="1173.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="bookNameColumn" prefWidth="300.0" styleClass="name-table" text="Book name" />
                                                <TableColumn fx:id="genreColumn" minWidth="0.0" prefWidth="200.0" text="Genre" />
                                                <TableColumn fx:id="authorColumn" minWidth="0.0" prefWidth="200.0" text="Author" />
                                                <TableColumn fx:id="publisherColumn" prefWidth="200.0" text="Publisher" />
                                                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
                                                <TableColumn fx:id="yearColumn" minWidth="0.0" prefWidth="100.0" text="Date" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </GridPane>
                                <JFXTextArea fx:id="synopsisText" editable="false" focusColor="darkorange" focusTraversable="false" layoutX="18.0" layoutY="213.0" mouseTransparent="true" prefHeight="323.0" prefWidth="211.0" />
                                <JFXButton fx:id="changeBookButton" onAction="#handleChangeBook" layoutX="72.0" layoutY="567.0" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Change" />
                                <JFXButton fx:id="deleteBookButton" onAction="#handleDeleteBook" layoutX="72.0" layoutY="634.0" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Delete" />
                            </children></AnchorPane>
                    </content>
                </Tab>
                <Tab text="Add book">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXTextField layoutX="238.0" layoutY="136.0" prefHeight="50.0" prefWidth="300.0" focusColor="darkorange" />
                        <JFXTextField layoutX="238.0" layoutY="385.0" prefHeight="50.0" prefWidth="300.0" focusColor="darkorange" />
                        <JFXComboBox layoutX="751.0" layoutY="136.0" prefHeight="50.0" prefWidth="300.0" focusColor="darkorange" />
                        <JFXComboBox layoutX="750.0" layoutY="250.0" prefHeight="50.0" prefWidth="300.0" focusColor="darkorange" />
                        <Label layoutX="164.0" layoutY="161.0" text="Title" />
                        <Label layoutX="159.0" layoutY="275.0" text="Price" />
                        <Label layoutX="75.0" layoutY="410.0" text="Stock quantity" />
                        <Label layoutX="59.0" layoutY="548.0" text="Publication date" />
                        <JFXTextField layoutX="238.0" layoutY="523.0" prefHeight="50.0" prefWidth="300.0" focusColor="darkorange" />
                        <JFXTextArea layoutX="750.0" layoutY="440.0" prefHeight="150.0" prefWidth="300.0" focusColor="darkorange" />
                        <Label layoutX="1085.0" layoutY="156.0" prefHeight="30.0" prefWidth="81.0" text="Author" />
                        <Label layoutX="1085.0" layoutY="270.0" prefHeight="30.0" prefWidth="113.0" text="Publisher" />
                        <JFXTextField layoutX="238.0" layoutY="250.0" prefHeight="50.0" prefWidth="300.0" focusColor="darkorange" />
                        <Label layoutX="862.0" layoutY="410.0" text="Synopsis" />
                        <JFXButton layoutX="1237.0" layoutY="508.0" prefHeight="80.0" ripplerFill="darkorange" prefWidth="120.0" text="Add Book" />
                     </children></AnchorPane>
                    </content>
                </Tab>
                <Tab text="Orders">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs></JFXTabPane>
        <HBox AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="1.0">
            <children>
                <JFXButton fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" prefHeight="77.0" prefWidth="88.0" text="Exit" />
            </children></HBox>
    </children>
</AnchorPane>
