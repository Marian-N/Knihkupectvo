                                            </columns>
                                        </TableView>
                                    </children>
                                </GridPane>
                                <JFXTextArea fx:id="synopsisText" focusColor="darkorange" layoutX="18.0" layoutY="213.0" prefHeight="323.0" prefWidth="211.0" />
                                <JFXButton fx:id="changeBookButton" layoutX="72.0" layoutY="567.0" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Change" />
                                <JFXButton fx:id="deleteBookButton" layoutX="72.0" layoutY="634.0" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Delete" />
                            </children></AnchorPane>
                    </content>
                </Tab>
                <Tab text="Add book">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab text="Orders">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs></JFXTabPane>
        <HBox AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="1.0">
            <children>
                <JFXButton fx:id="exitButton" mnemonicParsing="false" prefHeight="77.0" prefWidth="88.0" text="Exit" />
            </children></HBox>
    </children>
