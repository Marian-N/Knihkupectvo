<AnchorPane prefHeight="800.0" prefWidth="1500.0" stylesheets="@admin-style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.adminmain.AdminMainController">
    <children>
        <JFXTabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <tabs>
                <Tab id="booksTab" text="Books">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <JFXTextField fx:id="searchBookText" focusColor="darkorange" layoutX="12.0" layoutY="62.0" prefHeight="40.0" prefWidth="219.0" promptText="Search" />
                                <!--<JFXButton fx:id="searchBookButton" onAction="#handleSearchBook" layoutX="75.0" layoutY="128.0" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Search" />-->
                                <Label fx:id="searchBookLabel" layoutX="80.0" layoutY="128.0" prefHeight="40.0" prefWidth="100.0" text="Search" />
                                <GridPane layoutX="254.0" prefHeight="629.0" prefWidth="1241.0" translateX="1.0" translateY="1.0" translateZ="1.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                </GridPane>
                                <JFXTextArea fx:id="synopsisText" editable="false" focusColor="darkorange" focusTraversable="false" layoutX="18.0" layoutY="213.0" mouseTransparent="true" prefHeight="323.0" prefWidth="211.0" />
                                <JFXButton fx:id="changeBookButton" layoutX="72.0" layoutY="567.0" onAction="#handleChangeBook" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Change" />
                                <JFXButton fx:id="deleteBookButton" layoutX="72.0" layoutY="634.0" onAction="#handleDeleteBook" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Delete" />
                        <Pagination fx:id="paginationBooks" layoutX="247.0" prefHeight="720.0" prefWidth="1253.0" />
                                  <TableView fx:id="bookOverviewTable" layoutX="253.0" layoutY="1.0" onMouseClicked="#handleBookSelected" prefHeight="638.0" prefWidth="1245.0">
                                      <columns>
                                          <TableColumn fx:id="bookNameColumn" prefWidth="300.0" styleClass="name-table" text="Book name" />
                                          <TableColumn fx:id="genreColumn" minWidth="0.0" prefWidth="300.0" text="Genre" />
                                          <TableColumn fx:id="authorColumn" minWidth="0.0" prefWidth="250.0" text="Author" />
                                          <TableColumn fx:id="publisherColumn" prefWidth="200.0" text="Publisher" />
                                          <TableColumn fx:id="priceColumn" prefWidth="88.0" text="Price" />
                                          <TableColumn fx:id="yearColumn" minWidth="0.0" prefWidth="100.0" text="Date" />
                                      </columns>
                                  </TableView>
                            </children></AnchorPane>
                    </content>
                </Tab>
                <Tab id="addBookTab" text="Add book">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXTextField focusColor="darkorange" layoutX="238.0" layoutY="136.0" prefHeight="50.0" prefWidth="300.0" />
                        <JFXTextField focusColor="darkorange" layoutX="238.0" layoutY="385.0" prefHeight="50.0" prefWidth="300.0" />
                        <JFXComboBox focusColor="darkorange" layoutX="751.0" layoutY="136.0" prefHeight="50.0" prefWidth="300.0" />
                        <JFXComboBox focusColor="darkorange" layoutX="750.0" layoutY="250.0" prefHeight="50.0" prefWidth="300.0" />
                        <Label layoutX="164.0" layoutY="161.0" text="Title" />
                        <Label layoutX="159.0" layoutY="275.0" text="Price" />
                        <Label layoutX="75.0" layoutY="410.0" text="Stock quantity" />
                        <Label layoutX="59.0" layoutY="548.0" text="Publication date" />
                        <JFXTextField focusColor="darkorange" layoutX="238.0" layoutY="523.0" prefHeight="50.0" prefWidth="300.0" />
                        <JFXTextArea focusColor="darkorange" layoutX="750.0" layoutY="440.0" prefHeight="150.0" prefWidth="300.0" />
                        <Label layoutX="1085.0" layoutY="156.0" prefHeight="30.0" prefWidth="81.0" text="Author" />
                        <Label layoutX="1085.0" layoutY="270.0" prefHeight="30.0" prefWidth="113.0" text="Publisher" />
                        <JFXTextField focusColor="darkorange" layoutX="238.0" layoutY="250.0" prefHeight="50.0" prefWidth="300.0" />
                        <Label layoutX="862.0" layoutY="410.0" text="Synopsis" />
                        <JFXButton layoutX="1237.0" layoutY="508.0" prefHeight="80.0" prefWidth="120.0" ripplerFill="darkorange" text="Add Book" />
                     </children></AnchorPane>
                    </content>
                </Tab>
                <Tab id="ordersTab" text="Orders" onSelectionChanged="#loadOrders">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <AnchorPane prefHeight="720.0" prefWidth="1500.0">
                           <children>
                              <TableView fx:id="orderOverviewTable" layoutX="602.0" layoutY="-1.0" prefHeight="625.0" prefWidth="898.0">
                                <columns>
                                  <TableColumn fx:id="orderCustomerColumn" prefWidth="255.0" text="Customer" />
                                  <TableColumn fx:id="orderIDColumn" prefWidth="140.0" text="Order id" />
                                    <TableColumn fx:id="orderPriceColumn" minWidth="0.0" prefWidth="140.0" text="Price" />
                                    <TableColumn fx:id="orderDateColumn" prefWidth="170.0" text="Date" />
                                    <TableColumn fx:id="orderStatusColumn" prefWidth="190.0" text="Status" />
                                </columns>
                              </TableView>
                              <TableView fx:id="orderDetailTable" layoutX="55.0" layoutY="101.0" prefHeight="572.0" prefWidth="485.0">
                                <columns>
                                  <TableColumn fx:id="orderDetailCBookColumn" prefWidth="271.0" text="Book" />
                                  <TableColumn fx:id="orderDetailQuantityColumn" prefWidth="111.0" text="Quantity" />
                                    <TableColumn fx:id="orderDetailPriceColumn" prefWidth="102.0" text="Price" />
                                </columns>
                              </TableView>
                              <Label layoutX="244.0" layoutY="43.0" text="Order detail" />
                              <Pagination fx:id="paginationOrders" layoutX="783.0" layoutY="624.0" prefHeight="84.0" prefWidth="537.0" />
                           </children>
                        </AnchorPane>
                     </children></AnchorPane>
                    </content>
                </Tab>
            </tabs></JFXTabPane>
        <HBox AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="1.0">
            <children>
                <JFXButton fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" prefHeight="77.0" prefWidth="88.0" text="Exit" />
            </children></HBox>
    </children>
</AnchorPane>
