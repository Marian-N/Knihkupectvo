    <children>
        <JFXTabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <tabs>
                <Tab text="Books">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <JFXTextField fx:id="searchBookText" focusColor="darkorange" layoutX="12.0" layoutY="62.0" prefHeight="40.0" prefWidth="219.0" promptText="Search" />
                                <JFXButton fx:id="searchBookButton" layoutX="75.0" layoutY="128.0" prefHeight="40.0" prefWidth="100.0" ripplerFill="darkorange" text="Search" />
                                <GridPane layoutX="250.0" prefHeight="713.0" prefWidth="1245.0" translateX="1.0" translateY="1.0" translateZ="1.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <TableView fx:id="bookOverviewTable" prefHeight="713.0" prefWidth="1173.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
