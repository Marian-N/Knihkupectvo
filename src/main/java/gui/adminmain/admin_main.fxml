                                                <TableColumn fx:id="bookNameColumn" prefWidth="393.0" text="Book name" />
                                                <TableColumn fx:id="authorColumn" minWidth="0.0" prefWidth="408.0" text="Author" />
                                                <TableColumn fx:id="genreColumn" prefWidth="232.0" text="Genre" />
